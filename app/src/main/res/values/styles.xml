<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BottomSheetHeader">
        <item name="android:textColor">?attr/colorControlNormal</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="BottomSheetAction">
        <item name="android:background">@drawable/state_drawer_item_background</item>
        <item name="android:textViewStyle">@style/TextAppearance.MaterialComponents.Subtitle2</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:gravity">center|start</item>
    </style>

    <!-- Заголовок заметки в редакторе -->
    <style name="MyTextInputLayout">
        <item name="boxStrokeColor">@color/grey</item> <!-- Активное -->
        <item name="boxStrokeWidthFocused">1dp</item> <!-- Активное -->
        <item name="hintTextColor">@color/grey</item> <!-- Активное  -->
        <item name="boxStrokeWidth">1dp</item>
        <item name="cursorColor">@color/grey</item>
        <item name="android:textColorHint">@color/grey</item>
    </style>

    <style name="SelectText">
        <item name="colorControlActivated">@color/grey</item>
    </style>

    <style name="ConfirmDialogFragment" parent="ThemeOverlay.Material3.Dialog.Alert">
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="dialogCornerRadius">30dp</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/orange</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="RadioButtonStyle3" parent="Widget.Material3.CompoundButton.RadioButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:button">@null</item>
        <item name="android:drawableStart">@drawable/default_rb_bg</item>
        <item name="android:drawablePadding">12dp</item>
    </style>

</resources>