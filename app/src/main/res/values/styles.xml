<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BottomSheetHeader">
        <item name="android:textColor">?attr/colorControlNormal</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="BottomSheetAction">
        <item name="android:background">@drawable/state_drawer_item_background</item>
        <item name="android:textViewStyle">@style/TextAppearance.MaterialComponents.Subtitle2</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:gravity">center|start</item>
    </style>

    <!-- Заголовок заметки в редакторе -->
    <style name="MyTextInputLayout">
        <item name="boxStrokeColor">@color/grey</item> <!-- Активное -->
        <item name="boxStrokeWidthFocused">1dp</item> <!-- Активное -->
        <item name="hintTextColor">@color/grey</item> <!-- Активное  -->
        <item name="boxStrokeWidth">1dp</item>
        <item name="cursorColor">@color/grey</item>
        <item name="android:textColorHint">@color/grey</item>
    </style>

    <style name="SelectText">
        <item name="colorControlActivated">@color/grey</item>
    </style>

</resources>