<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageButton
        android:id="@+id/btnMore"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/bg_btn_property_note"
        android:contentDescription="More property"
        android:paddingHorizontal="8dp"
        android:paddingVertical="8dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_more_vert"
        app:layout_constraintBottom_toBottomOf="@id/typeContent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/typeContent"
        app:tint="@color/orange" />

    <LinearLayout
        android:id="@+id/typeContent"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:background="@drawable/bg_btn_property_note"
        android:orientation="horizontal"
        android:paddingVertical="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnSave"
        app:layout_constraintStart_toEndOf="@id/btnMore">

        <ImageButton
            android:id="@+id/btnCheck"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginHorizontal="4dp"
            android:background="@drawable/bg_btn_property_note"
            android:contentDescription="Add Check to Note"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_check_circle"
            app:tint="@color/orange" />

        <ImageButton
            android:id="@+id/btnVoice"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginHorizontal="4dp"
            android:background="@drawable/bg_btn_property_note"
            android:contentDescription="Add Voice to Note"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_voice"
            app:tint="@color/orange" />

        <ImageButton
            android:id="@+id/btnImage"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginHorizontal="4dp"
            android:background="@drawable/bg_btn_property_note"
            android:contentDescription="Add Picture to Note"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_image"
            app:tint="@color/orange" />

        <ImageButton
            android:id="@+id/btnDraw"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginHorizontal="4dp"
            android:background="@drawable/bg_btn_property_note"
            android:contentDescription="Add Draw to Note"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_draw"
            app:tint="@color/orange" />

    </LinearLayout>


    <ImageButton
        android:id="@+id/btnSave"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/bg_btn_save_note"
        android:contentDescription="Save Note"
        android:paddingHorizontal="8dp"
        android:paddingVertical="8dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_done"
        app:layout_constraintBottom_toBottomOf="@id/typeContent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/typeContent"
        app:tint="@color/white" />

</androidx.constraintlayout.widget.ConstraintLayout>